            <Button
                android:id="@+id/btn_allgemein_weiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/btn_weiter_margin_right"
                android:onClick="oeffneFragebogenKlassifizierung"
                android:paddingHorizontal="@dimen/btn_weiter_padding_horizontal"
                android:paddingVertical="@dimen/btn_weiter_padding_vertical"
                android:text="@string/btn_weiter" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>