<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_allgemein"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_name_der_anlage"
                style="@style/question_textview"
                android:text="@string/lbl_question_name_der_anlage" />

            <EditText
                android:id="@+id/answer_name_der_anlage"
                style="@style/question_edittext"
                android:imeOptions="actionNext"
                android:inputType="text" />


            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/container_zoom_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/question_lage"
                        style="@style/question_textview"
                        android:layout_weight="1"
                        android:text="@string/lbl_question_lage" />

                    <Button
                        android:id="@+id/btn_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/question_margin_top"
                        android:onClick="chooseLocationByGps"
                        android:text="@string/btn_location" />
                </LinearLayout>
            </FrameLayout>

            <EditText
                android:id="@+id/answer_lage"
                style="@style/question_edittext"
                android:imeOptions="actionNext"
                android:inputType="text" />


            <TextView
                android:id="@+id/question_gewaesser"
                style="@style/question_textview"
                android:text="@string/lbl_question_gewaesser" />

            <EditText
                android:id="@+id/answer_gewaesser"
                style="@style/question_edittext"
                android:imeOptions="actionNext"
                android:inputType="text" />


            <TextView
                android:id="@+id/question_eigentuemer"
                style="@style/question_textview"
                android:text="@string/lbl_question_eigentuemer" />

            <EditText
                android:id="@+id/answer_eigentuemer"
                style="@style/question_edittext"
                android:imeOptions="actionNext"
                android:inputType="text" />


            <TextView
                android:id="@+id/question_art_des_absperrbauwerkes"
                style="@style/question_textview"
                android:text="@string/lbl_question_art_des_absperrbauwerkes" />

            <EditText
                android:id="@+id/answer_art_des_absperrbauwerkes"
                style="@style/question_edittext"
                android:imeOptions="actionNext"
                android:inputType="text" />


            <TextView
                android:id="@+id/question_hoehe"
                style="@style/question_textview"
                android:text="@string/lbl_question_hoehe" />

            <EditText
                android:id="@+id/answer_hoehe"
                style="@style/question_edittext"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal" />


            <TextView
                android:id="@+id/question_stauinhalt"
                style="@style/question_textview"
                android:text="@string/lbl_question_stauinhalt" />

            <EditText
                android:id="@+id/answer_stauinhalt"
                style="@style/question_edittext"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal" />


            <TextView
                android:id="@+id/question_bhq1"
                style="@style/question_textview"
                android:text="@string/lbl_question_bhq1" />

            <EditText
                android:id="@+id/answer_bhq1"
                style="@style/question_edittext"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal" />


            <TextView
                android:id="@+id/question_bhq2"
                style="@style/question_textview"
                android:text="@string/lbl_question_bhq2" />

            <EditText
                android:id="@+id/answer_bhq2"
                style="@style/question_edittext"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/question_bhq2_abschaetzung"
                style="@style/question_textview"
                android:text="@string/lbl_question_bhq2_abschaetzung"
                />

            <EditText
                android:id="@+id/answer_bhq2_abschaetzung"
                style="@style/question_edittext"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:autofillHints="@string/wird_momentan_nicht_beachtet"
                android:hint="@string/wird_momentan_nicht_beachtet"/>


            <TextView
                android:id="@+id/question_betriebsvorschrift_normalbetrieb"
                style="@style/question_textview"
                android:text="@string/lbl_question_betriebsvorschrift_normalbetrieb" />

            <RadioGroup
                android:id="@+id/radio_betriebsvorschrift_normalbetrieb"
                style="@style/question_radiogroup"
                android:checkedButton="@+id/opt_unknown_betriebsvorschrift_normalbetrieb">

                <RadioButton
                    android:id="@+id/opt_yes_betriebsvorschrift_normalbetrieb"
                    style="@style/question_radiobutton"
                    android:text="@string/opt_yes" />

                <RadioButton
                    android:id="@+id/opt_no_betriebsvorschrift_normalbetrieb"
                    style="@style/question_radiobutton"
                    android:text="@string/opt_no" />

                <RadioButton
                    android:id="@+id/opt_unknown_betriebsvorschrift_normalbetrieb"
                    style="@style/question_radiobutton"
                    android:text="@string/opt_unknown" />
            </RadioGroup>


            <TextView
                android:id="@+id/question_betriebsvorschtift_hochwasserfall"
                style="@style/question_textview"
                android:text="@string/lbl_question_betriebsvorschrift_hochwasserfall" />

            <RadioGroup
                android:id="@+id/radio_betriebsvorschtift_hochwasserfall"
                style="@style/question_radiogroup"
                android:checkedButton="@+id/opt_unknown_betriebsvorschrift_hochwasserfall">

                <RadioButton
                    android:id="@+id/opt_yes_betriebsvorschrift_hochwasserfall"
                    style="@style/question_radiobutton"
                    android:text="@string/opt_yes" />

                <RadioButton
                    android:id="@+id/opt_no_betriebsvorschrift_hochwasserfall"
                    style="@style/question_radiobutton"
                    android:text="@string/opt_no" />

                <RadioButton
                    android:id="@+id/opt_unknown_betriebsvorschrift_hochwasserfall"
                    style="@style/question_radiobutton"
                    android:text="@string/opt_unknown" />
            </RadioGroup>

