<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding = "8dp">

    <TextView
        android:id="@+id/questionaireNameTestView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="placeholder Text" />

    <ImageView
        android:id="@+id/exportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_file_upload_black_24dp"
        android:contentDescription="@string/export_button_description" />

    <ImageView
        android:id="@+id/printButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/exportButton"
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_print_black_24dp"
        android:contentDescription="@string/delete_button_description" />

    <ImageView
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/printButton"
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_edit_black_24dp"
        android:clickable="true"
        android:contentDescription="@string/edit_button" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignTop="@+id/exportButton"
        android:layout_marginTop="40dp"
        android:background="@android:color/darker_gray"
        />
</RelativeLayout>
